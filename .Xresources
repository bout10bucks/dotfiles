!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------
 
URxvt.depth: 32
URxvt.geometry: 90x24
URxvt.transparent: false
URxvt.fading: 0
! URxvt.urgentOnBell: true
! URxvt.visualBell: true
URxvt.loginShell: true
URxvt.saveLines: 500
URxvt.internalBorder: 3
URxvt.lineSpace: 0
 
! Icon
URxvt.iconFile: /usr/share/icons/Faenza/apps/scalable/terminal.svg
! Fonts
URxvt.allow_bold: true
! URxvt.font: -*-terminus-medium-r-normal-*-9-120-72-72-c-60-iso8859-1
URxvt*font: xft:terminus:pixelsize=9
URxvt*boldFont: xft:terminus:pixelsize=9
 
! Fix font space
! URxvt*letterSpace: -1
 
! Scrollbar
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false
 
! Perl extensions
URxvt.perl-ext-common: default,matcher,clipboard
URxvt.matcher.button: 1
URxvt.urlLauncher: firefox
 
! Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #657b83
URxvt.cursorUnderline: false
 
! Pointer
URxvt.pointerBlank: true
 
URxvt.intensityStyles: false

! Colors
